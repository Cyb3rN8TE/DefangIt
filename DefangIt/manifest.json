{
  "name": "DefangIt",
  "version": "2.0",
  "manifest_version": 3,
  "permissions": ["activeTab", "scripting", "contextMenus"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "DefangIt",
    "default_icon": {
      "128": "images/128.png",
      "48": "images/48.png",
      "16": "images/16.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
