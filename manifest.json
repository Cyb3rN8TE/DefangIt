{
  "manifest_version": 3,

  "name": "DefangIt",
  "description": "IT Security tool that defangs any selected IPs, URLs and Domains and copies them to your clipboard",
  "version": "1.0.0",

  "permissions": [
    "contextMenus",
    "tabs"
  ],

  "icons": [
    {
      "src": "icon16.png",
      "sizes": "16x16"
    },
    {
      "src": "icon32.png",
      "sizes": "32x32"
    },
    {
      "src": "icon48.png",
      "sizes": "48x48"
    },
    {
      "src": "icon128.png",
      "sizes": "128x128"
    }
  ],

  "background": {
    "service_worker": "worker.js"
  }
}
